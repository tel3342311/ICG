<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="?attr/actionBarSize" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        <ImageView 
            android:id="@+id/cancel"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
			android:layout_centerVertical="true"
            android:background="@drawable/ic_clear_white_24dp"
            android:backgroundTint="@color/md_black_1000"/>
        
        <TextView 
	        android:id="@+id/login_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        android:layout_marginBottom="@dimen/page_title_margin_bottom"
	        android:text="請登入家長帳號"
	        android:textSize="@dimen/page_title_text_size"
	        android:textColor="@color/md_black_1000"
	        android:layout_centerInParent="true"/>
        
        <ImageView 
            android:id="@+id/confirm"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
			android:layout_centerVertical="true"
            android:background="@drawable/ic_check_black_24dp"
            android:layout_alignParentEnd="true"
            android:tint="@color/md_black_1000"/>
        </RelativeLayout>        
     </android.support.v7.widget.Toolbar>
     
    <EditText
	    android:id="@+id/login_name"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/login_edit_text_height"
	    android:layout_below="@id/toolbar"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	  	android:layout_marginBottom="@dimen/page_title_margin_bottom"
	    android:hint="姓名"
	    android:maxLines="1"
	    android:textCursorDrawable="@null"
	    android:textSize="@dimen/login_edit_text_size"
	    android:textColor="@color/md_black_1000"/>

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_below="@id/login_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
      	android:layout_marginBottom="@dimen/page_title_margin_bottom"
        android:hint="手機號碼"
        android:maxLines="1"
        android:inputType="phone"
        android:textColor="@color/md_black_1000"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/login_edit_text_size" />

    <EditText
        android:id="@+id/login_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_below="@id/login_phone"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
       	android:layout_marginBottom="@dimen/page_title_margin_bottom"
        android:hint="帳號(至少八碼英文或數字)"
        android:maxLines="1"
        android:textColor="@color/md_black_1000"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/login_edit_text_size" />

	<EditText
	    android:id="@+id/login_password"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/login_edit_text_height"
	   	android:layout_below="@id/login_account"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	    android:layout_marginBottom="@dimen/page_title_margin_bottom"
	    android:inputType="textPassword"
	    android:hint="密碼"
	    android:maxLines="1"
	    android:textCursorDrawable="@null"
	    android:textSize="@dimen/login_edit_text_size" 
	    android:textColor="@color/md_black_1000"/>
	
	<EditText
	    android:id="@+id/login_password_confirm"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/login_edit_text_height"
	   	android:layout_below="@id/login_password"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
	    android:layout_marginBottom="@dimen/page_title_margin_bottom"
	    android:inputType="textPassword"
	    android:hint="再次確認新密碼"
	    android:maxLines="1"
	    android:textCursorDrawable="@null"
	    android:textSize="@dimen/login_edit_text_size" 
	    android:textColor="@color/md_black_1000"/>

</RelativeLayout>